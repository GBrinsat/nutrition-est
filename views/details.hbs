{{!-- Intro image + search bar --}}

<div class="details-container">
  <div class="col-12 text-center margin-top">
    <h5>nutrition information for:</h5>
    <h1>{{food.[0].food_name}}</h1>
      <table class="nutrients-table mx-auto">
        <tr>
          <th>Nutrient</th>
          <th>per 100g</th>
        </tr>
        <tr>
          <td>Energy</td>
          <td>{{nutrients.[0]}} kcal</td>
        </tr>
        <tr>
          <td>Fat</td>
          <td>{{nutrients.[1]}} g</td>
        </tr>
        <tr>
          <td>Saturated Fat</td>
          <td>{{nutrients.[2]}} g</td>
        </tr>
        <tr>
          <td>Cholesterol</td>
          <td>{{nutrients.[3]}} mg</td>
        </tr>
        <tr>
          <td>Sodium</td>
          <td>{{nutrients.[4]}} mg</td>
        </tr>
        <tr>
          <td>Carbohydrates</td>
          <td>{{nutrients.[5]}} g</td>
        </tr>
        <tr>
          <td>Sugar</td>
          <td>{{nutrients.[6]}} g</td>
        </tr>
        <tr>
          <td>Fiber</td>
          <td>{{nutrients.[7]}} g</td>
        </tr>        
        <tr>
          <td>Protein</td>
          <td>{{nutrients.[8]}} g</td>
        </tr> 
         <tr>
          <td>Potassium</td>
          <td>{{nutrients.[9]}} mg</td>
        </tr> 

      </table>

  </div>
</div>

{{!-- Dropdown for adding food to List --}}


 <!-- Button trigger modal -->
      <button type="button" class="pill-lightgreen rounded-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Add to list
      </button>
	  
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
     <div class="modal-dialog">
       <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Choose list</h1>
           <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
         </div>
         <div class="modal-body">

          <form action="/profile/add-item" method="POST">
            <div class="col-9 mx-auto">
            {{#if message}}
              <h3 class="error-message rounded-4">{{message}}</h3>
            {{/if}}
            </div>
            <div class="mb-1 col-9 mx-auto">
              <select class="form-control form-height border-success rounded-4 select-sizer" name="lists" multiple>
                <option value="{{user.list1.[0]}}">{{user.list1.[0]}}</option>
                <option value="{{user.list2.[0]}}">{{user.list2.[0]}}</option>
                <option value="{{user.list3.[0]}}">{{user.list3.[0]}}</option>                
              </select>
            </div>
         </div>
          <input type="hidden" name="food" value="{{food.[0].food_name}}">
         <div class="modal-footer">
           <button type="button" class="btn-lightgreen rounded-4" data-bs-dismiss="modal">Close</button>
           <button type="submit" class="btn-green rounded-4">Add to list</button>
         </div>
         </form>
       </div>
     </div>
    </div>
